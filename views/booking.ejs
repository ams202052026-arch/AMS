<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMS - Book Appointment</title>
    <link rel="icon" type="image/png" href="/image/favicon.png">
    <link rel="stylesheet" href="/css/scrollbar.css">
    <link rel="stylesheet" href="/css/booking.css">
    <link rel="stylesheet" href="/css/headerAndNavigation.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('partials/headerAndNavigation') %>

    <main class="main-content">
        <div class="booking-container">
            <div class="service-summary">
                <img src="<%= service.image %>" alt="<%= service.name %>" class="service-image">
                <h2><%= service.name %></h2>
                <p class="description"><%= service.description %></p>
                <div class="service-details">
                    <span class="price" id="originalPrice">₱<%= service.price %></span>
                    <span class="duration"><%= service.duration %> mins</span>
                    <span class="points">+<%= service.pointsEarned %> pts</span>
                </div>
                <div id="priceBreakdown" class="price-breakdown" style="display: none;">
                    <div class="breakdown-row">
                        <span>Original Price:</span>
                        <span id="breakdownOriginal">₱<%= service.price %></span>
                    </div>
                    <div class="breakdown-row discount">
                        <span>Discount:</span>
                        <span id="breakdownDiscount">-₱0</span>
                    </div>
                    <div class="breakdown-row total">
                        <span>Final Price:</span>
                        <span id="breakdownFinal">₱<%= service.price %></span>
                    </div>
                </div>
            </div>

            <form action="/appointments/book" method="POST" class="booking-form" id="bookingForm">
                <input type="hidden" name="serviceId" value="<%= service._id %>">

                <div class="form-group">
                    <label for="staffId">Select Staff</label>
                    <select name="staffId" id="staffId" required>
                        <option value="">Choose a staff member...</option>
                        <% availableStaff.forEach(staff => { %>
                            <option value="<%= staff._id %>"><%= staff.name %></option>
                        <% }) %>
                    </select>
                </div>

                <% if (applicableRedemptions && applicableRedemptions.length > 0) { %>
                <div class="form-group">
                    <label for="redemptionId">Apply Reward (Optional)</label>
                    <select name="redemptionId" id="redemptionId">
                        <option value="">No reward</option>
                        <% applicableRedemptions.forEach(redemption => { %>
                            <option value="<%= redemption._id %>" 
                                    data-discount-type="<%= redemption.reward.discountType %>"
                                    data-discount-value="<%= redemption.reward.discountValue %>">
                                <%= redemption.reward.name %> 
                                (<%= redemption.reward.discountType === 'percentage' ? redemption.reward.discountValue + '%' : '₱' + redemption.reward.discountValue %> off)
                            </option>
                        <% }) %>
                    </select>
                    <small class="hint">Select a reward to apply discount to this booking</small>
                </div>
                <% } %>

                <div class="form-group">
                    <label for="date">Select Date</label>
                    <input type="date" name="date" id="date" required 
                           min="<%= new Date().toISOString().split('T')[0] %>"
                           max="<%= (() => { const d = new Date(); d.setDate(d.getDate() + 30); return d.toISOString().split('T')[0]; })() %>">
                </div>

                <div class="form-group">
                    <label>Select Time</label>
                    <div class="time-slots" id="timeSlots">
                        <p class="hint">Please select a date first</p>
                    </div>
                    <input type="hidden" name="startTime" id="startTime">
                    <input type="hidden" name="endTime" id="endTime">
                </div>

                <button type="submit" class="btn-book">Confirm Booking</button>
            </form>
        </div>
    </main>

    <!-- Error/Warning Modal -->
    <div id="messageModal" class="modal-overlay">
        <div class="modal-box">
            <span class="close-btn" onclick="document.getElementById('messageModal').style.display = 'none'">&times;</span>
            <h3 id="modalTitle">Booking Conflict</h3>
            <p id="modalMessage"></p>
            <button class="modal-btn" id="modalCloseBtn">OK</button>
        </div>
    </div>

    <%- include('partials/footer') %>

    <div id="bookingData" 
         data-service-id="<%= service._id %>" 
         data-service-price="<%= service.price %>" 
         style="display:none;"></div>
    
    <!-- Booking Confirmation Modal -->
    <div id="bookingConfirmModal" class="modal-overlay" style="display: none;">
        <div class="modal-box">
            <span class="close-btn" onclick="closeBookingConfirmModal()">&times;</span>
            <h3>Confirm Booking</h3>
            <p>Please review your booking details.</p>
            
            <div class="booking-summary">
                <p><strong>Date:</strong> <span id="confirmDate"></span></p>
                <p><strong>Time:</strong> <span id="confirmTime"></span></p>
                <p><strong>Staff:</strong> <span id="confirmStaff"></span></p>
            </div>
            
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeBookingConfirmModal()">Cancel</button>
                <button type="button" class="btn-primary" onclick="confirmBooking()">Confirm</button>
            </div>
        </div>
    </div>

    <script src="/js/booking.js"></script>
    <script src="/js/headerAndNavigation.js"></script>
</body>
</html>
