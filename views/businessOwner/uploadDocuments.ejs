<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Documents</title>
    <link rel="icon" type="image/png" href="/image/favicon.png">
    <link rel="stylesheet" href="/css/scrollbar.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #ffffff;
            color: #1a1a1a;
            line-height: 1.6;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            padding: 20px;
        }

        .back-link {
            margin-bottom: 20px;
        }

        .back-link a {
            color: #666;
            text-decoration: none;
            font-size: 14px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .back-link a:hover {
            color: #1a1a1a;
        }

        .page-header {
            margin-bottom: 30px;
        }

        .page-header h1 {
            font-size: 32px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }

        .page-header p {
            color: #666;
            font-size: 15px;
        }

        .progress-bar {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 30px;
            padding: 16px;
            background: #f8f9fa;
            border-radius: 12px;
        }

        .progress-step {
            flex: 1;
            text-align: center;
            font-size: 13px;
            color: #999;
        }

        .progress-step.completed {
            color: #1a1a1a;
            font-weight: 500;
        }

        .progress-step.active {
            color: #1a1a1a;
            font-weight: 600;
        }

        .info-note {
            background: #f8f9fa;
            padding: 14px;
            border-radius: 8px;
            font-size: 13px;
            color: #666;
            margin-bottom: 24px;
        }

        .error-message {
            background: #ffebee;
            color: #c62828;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .document-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 16px;
        }

        .document-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .document-title {
            font-size: 15px;
            font-weight: 600;
            color: #1a1a1a;
        }

        .badge {
            font-size: 10px;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 4px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge.required {
            background: #1a1a1a;
            color: #ffffff;
        }

        .badge.optional {
            background: #e0e0e0;
            color: #666;
        }

        .document-desc {
            font-size: 13px;
            color: #666;
            margin-bottom: 12px;
        }

        .file-input-wrapper {
            position: relative;
        }

        .file-input-wrapper input[type=file] {
            position: absolute;
            opacity: 0;
            width: 100%;
            height: 100%;
            cursor: pointer;
        }

        .file-input-label {
            display: block;
            padding: 14px;
            background: #ffffff;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 14px;
            color: #666;
        }

        .file-input-label:hover {
            border-color: #1a1a1a;
            background: #fafafa;
        }

        .file-input-label.has-file {
            border-color: #1a1a1a;
            background: #fafafa;
            color: #1a1a1a;
        }

        .file-name {
            margin-top: 8px;
            font-size: 12px;
            color: #1a1a1a;
            font-weight: 500;
        }

        .button-group {
            margin-top: 30px;
        }

        .submit-btn {
            width: 100%;
            padding: 14px;
            background: #1a1a1a;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
        }

        .submit-btn:hover {
            background: #333;
        }

        /* Mobile */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .page-header h1 {
                font-size: 24px;
            }

            .progress-bar {
                padding: 12px;
                font-size: 11px;
            }

            .document-card {
                padding: 16px;
            }

            .document-title {
                font-size: 14px;
            }

            .document-desc {
                font-size: 12px;
            }

            .file-input-label {
                padding: 12px;
                font-size: 13px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="back-link">
            <a href="<%= isUnifiedMode ? '/home' : '/business-owner/dashboard' %>">← Back</a>
        </div>

        <div class="page-header">
            <h1>Upload Documents</h1>
            <p>Submit your business documents for verification</p>
        </div>

        <div class="progress-bar">
            <div class="progress-step completed">✓ Registration</div>
            <div class="progress-step active">Documents</div>
            <div class="progress-step">Verification</div>
        </div>

        <% if (error) { %>
        <div class="error-message"><%= error %></div>
        <% } %>

        <div class="info-note">
            All documents must be clear and readable. Accepted: PDF, JPG, PNG (Max 5MB each)
        </div>

        <form action="<%= isUnifiedMode ? '/business/upload-documents' : '/business-owner/upload-documents' %>" method="POST" enctype="multipart/form-data">
            <!-- DTI -->
            <div class="document-card">
                <div class="document-header">
                    <div class="document-title">DTI / SEC Certificate</div>
                    <span class="badge required">Required</span>
                </div>
                <div class="document-desc">Business registration from DTI or SEC</div>
                <div class="file-input-wrapper">
                    <input type="file" name="dti" id="dti" accept=".pdf,.jpg,.jpeg,.png" required>
                    <label for="dti" class="file-input-label" id="dti-label">
                        Choose file
                    </label>
                    <div class="file-name" id="dti-name"></div>
                </div>
            </div>

            <!-- Business Permit -->
            <div class="document-card">
                <div class="document-header">
                    <div class="document-title">Business Permit</div>
                    <span class="badge required">Required</span>
                </div>
                <div class="document-desc">Mayor's permit from local government</div>
                <div class="file-input-wrapper">
                    <input type="file" name="business_permit" id="permit" accept=".pdf,.jpg,.jpeg,.png" required>
                    <label for="permit" class="file-input-label" id="permit-label">
                        Choose file
                    </label>
                    <div class="file-name" id="permit-name"></div>
                </div>
            </div>

            <!-- Valid ID -->
            <div class="document-card">
                <div class="document-header">
                    <div class="document-title">Valid ID</div>
                    <span class="badge required">Required</span>
                </div>
                <div class="document-desc">Government-issued ID (License, Passport, etc.)</div>
                <div class="file-input-wrapper">
                    <input type="file" name="valid_id" id="valid_id" accept=".pdf,.jpg,.jpeg,.png" required>
                    <label for="valid_id" class="file-input-label" id="valid_id-label">
                        Choose file
                    </label>
                    <div class="file-name" id="valid_id-name"></div>
                </div>
            </div>

            <!-- BIR (Optional) -->
            <div class="document-card">
                <div class="document-header">
                    <div class="document-title">BIR Certificate</div>
                    <span class="badge optional">Optional</span>
                </div>
                <div class="document-desc">BIR registration certificate (if available)</div>
                <div class="file-input-wrapper">
                    <input type="file" name="bir" id="bir" accept=".pdf,.jpg,.jpeg,.png">
                    <label for="bir" class="file-input-label" id="bir-label">
                        Choose file
                    </label>
                    <div class="file-name" id="bir-name"></div>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="submit-btn">Submit →</button>
            </div>
        </form>
    </div>

    <script>
        const fileInputs = ['dti', 'permit', 'valid_id', 'bir'];
        
        fileInputs.forEach(id => {
            const input = document.getElementById(id);
            const label = document.getElementById(id + '-label');
            const nameDisplay = document.getElementById(id + '-name');
            
            input.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    const fileName = this.files[0].name;
                    const fileSize = (this.files[0].size / 1024 / 1024).toFixed(2);
                    
                    label.classList.add('has-file');
                    label.textContent = 'File selected';
                    nameDisplay.textContent = `${fileName} (${fileSize} MB)`;
                } else {
                    label.classList.remove('has-file');
                    label.textContent = 'Choose file';
                    nameDisplay.textContent = '';
                }
            });
        });
    </script>
</body>
</html>
