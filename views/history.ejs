<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AMS - Appointment History</title>
    <link rel="stylesheet" href="/css/scrollbar.css">
    <link rel="stylesheet" href="/css/history.css">
    <link rel="stylesheet" href="/css/headerAndNavigation.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('partials/headerAndNavigation') %>

    <main class="main-content">
        <% if (appointments.length > 0) { %>
            <div class="page-header">
                <button class="btn-danger" onclick="showClearAllModal()">Clear All History</button>
            </div>
        <% } %>

        <% if (appointments.length === 0) { %>
            <div class="empty-state">
                <p>No appointment history yet.</p>
            </div>
        <% } else { %>
            <div class="history-list">
                <% appointments.forEach(apt => { %>
                    <div class="history-card status-<%= apt.status %>">
                        <div class="history-header">
                            <span class="queue-number"><%= apt.queueNumber %></span>
                            <span class="status-badge <%= apt.status %>"><%= apt.status.toUpperCase() %></span>
                        </div>
                        
                        <div class="history-body">
                            <h3><%= apt.service.name %></h3>
                            <p class="date">
                                <%= new Date(apt.date).toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' }) %>
                            </p>
                            <p class="time"><%= apt.timeSlot.startFormatted %> - <%= apt.timeSlot.endFormatted %></p>
                            <% if (apt.staff) { %>
                                <p class="staff">Served by: <%= apt.staff.name %></p>
                            <% } %>
                        </div>

                        <div class="history-footer">
                            <div class="price-info">
                                <span class="price">â‚±<%= apt.service.price %></span>
                                <% if (apt.pointsAwarded > 0) { %>
                                    <span class="points-earned">+<%= apt.pointsAwarded %> pts</span>
                                <% } %>
                            </div>
                            <button class="btn-delete" onclick="showDeleteModal('<%= apt._id %>', '<%= apt.queueNumber %>')">
                                Delete
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>

    <%- include('partials/footer') %>

    <!-- Delete Single History Modal -->
    <div id="deleteHistoryModal" class="modal-overlay" style="display: none;">
        <div class="modal-box">
            <span class="close-btn" onclick="closeDeleteHistoryModal()">&times;</span>
            <h3>Delete History</h3>
            <p>Are you sure you want to delete this history entry?</p>
            <p class="queue-display">Queue: <strong id="deleteQueueNumber"></strong></p>
            <p class="warning-text">This action cannot be undone.</p>
            
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeDeleteHistoryModal()">Cancel</button>
                <button type="button" class="btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>

    <!-- Clear All History Modal -->
    <div id="clearAllModal" class="modal-overlay" style="display: none;">
        <div class="modal-box">
            <span class="close-btn" onclick="closeClearAllModal()">&times;</span>
            <h3>Clear All History</h3>
            <p>Are you sure you want to clear all history?</p>
            
            <div class="booking-summary">
                <p>The following will be removed:</p>
                <ul>
                    <li>All completed appointments</li>
                    <li>All cancelled appointments</li>
                    <li>Data cannot be recovered</li>
                </ul>
            </div>
            
            <p class="warning-text">Your points will not be affected, only history.</p>
            
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeClearAllModal()">Cancel</button>
                <button type="button" class="btn-danger" onclick="confirmClearAll()">Clear All</button>
            </div>
        </div>
    </div>

    <script>
        let currentDeleteId = null;

        function showDeleteModal(appointmentId, queueNumber) {
            currentDeleteId = appointmentId;
            document.getElementById('deleteQueueNumber').textContent = queueNumber;
            document.getElementById('deleteHistoryModal').style.display = 'flex';
            
            document.getElementById('confirmDeleteBtn').onclick = function() {
                deleteHistory(appointmentId);
            };
        }

        function closeDeleteHistoryModal() {
            document.getElementById('deleteHistoryModal').style.display = 'none';
            currentDeleteId = null;
        }

        async function deleteHistory(appointmentId) {
            try {
                const response = await fetch(`/history/${appointmentId}/delete`, {
                    method: 'POST'
                });
                
                if (response.ok) {
                    closeDeleteHistoryModal();
                    window.location.reload();
                } else {
                    alert('Failed to delete history');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }

        function showClearAllModal() {
            document.getElementById('clearAllModal').style.display = 'flex';
        }

        function closeClearAllModal() {
            document.getElementById('clearAllModal').style.display = 'none';
        }

        async function confirmClearAll() {
            try {
                const response = await fetch('/history/clear-all', {
                    method: 'POST'
                });
                
                if (response.ok) {
                    closeClearAllModal();
                    window.location.reload();
                } else {
                    alert('Failed to clear history');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        }

        // Close modals when clicking outside
        document.getElementById('deleteHistoryModal').addEventListener('click', function(e) {
            if (e.target === this) closeDeleteHistoryModal();
        });

        document.getElementById('clearAllModal').addEventListener('click', function(e) {
            if (e.target === this) closeClearAllModal();
        });
    </script>
    
    <script src="/js/headerAndNavigation.js"></script>
</body>
</html>
